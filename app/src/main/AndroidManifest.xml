<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mychat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_darksome"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_darksome_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyChat">
        <activity android:name=".activities.SupportActivity"></activity>
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.ContactsActivity" />
        <activity
            android:name=".activities.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/Theme.MyChat.NoActionBar" />
        <activity
            android:name=".activities.ChatActivity"
            android:theme="@style/Theme.MyChat.NoActionBar"></activity>
        <activity android:name=".activities.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>